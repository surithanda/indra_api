# Server Configuration
NODE_ENV=development
PORT=5000
API_PREFIX=/api/admin

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=matrimony_services
DB_CONNECTION_LIMIT=10

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=8h
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your_session_secret_key_here
SESSION_EXPIRES_IN=28800000

# CORS Configuration
# Update this to match your frontend URL (Vite uses 5173, CRA uses 3000)
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@matrimony.com

# MFA Configuration
MFA_ISSUER=Matrimony Admin
MFA_WINDOW=2

# Logging
LOG_LEVEL=info
LOG_FILE=logs/admin-service.log

# Security
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_DURATION=1800000

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# API Keys
API_KEY_LENGTH=64
API_KEY_DEFAULT_EXPIRY_DAYS=365
